<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.asus.mywallet.MainActivity">

    <include
android:id="@+id/toolbar"
layout="@layout/toolbar_layout" />

<Button
android:id="@+id/addItem"
android:layout_width="match_parent"
android:layout_height="110dp"
android:layout_gravity="center"

android:background="@color/colorButton"
android:layout_weight="0"
android:text="Add Item"
android:textAllCaps="true"

android:drawableTop="@drawable/ic_add_item"
android:textColor="@color/colorPrimaryDark"/>

<Button
android:id="@+id/showAllItem"
android:layout_width="match_parent"
android:layout_height="110dp"
android:layout_gravity="center"
android:layout_weight="0"
android:layout_marginBottom="10dp"
android:background="@color/colorButton"
android:drawableTop="@drawable/ic_coins"
android:text="All ITEM"
android:textAllCaps="true"
android:textColor="@color/colorPrimaryDark"/>

<Button
android:id="@+id/historyId"
android:layout_width="200dp"
android:layout_height="40dp"
android:layout_marginBottom="5dp"
android:height="40dp"
android:gravity="center"
android:layout_gravity="center_horizontal"
android:background="@color/LighterWhite"
android:text="summary"
android:textAllCaps="true"
android:textColor="@color/colorPrimaryDark"
android:textSize="16dp"
android:textStyle="normal" />

<Spinner
android:id="@+id/datePickerID"
android:layout_width="match_parent"
android:layout_height="40dp"
android:textAlignment="center"
android:layout_marginTop="5dp"
android:background="@color/colorLightSky"
android:textStyle="bold"
android:textAllCaps="true"/>
<TableLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/colorButton"
android:layout_weight="0">
<TableRow android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="left"
        android:text="Total Income"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginRight="20dp"
        android:textSize="16dp" />
    <TextView
        android:id="@+id/totalIncomeId"
        android:layout_height="40dp"
        android:layout_width="100dp"
        android:gravity="right"
        android:textStyle="bold"
        android:text="3000"
        android:layout_span="2"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp" />

</TableRow>

<TableRow
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_height="40dp"
        android:layout_width="wrap_content"
        android:layout_gravity="left"
        android:text="Total Expense"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/totalExpenseId"
        android:layout_height="40dp"
        android:layout_width="100dp"
        android:gravity="right"
        android:textStyle="bold"
        android:text="3000"
        android:layout_span="2"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp" />

</TableRow>

<TableRow
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp">

    <TextView
        android:layout_height="40dp"
        android:layout_width="wrap_content"
        android:layout_gravity="left"
        android:text="Funds in Wallet"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/totalBalanceId"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:gravity="right"
        android:text="3000"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        android:textStyle="bold" />

</TableRow>


</TableLayout>


    </LinearLayout>
